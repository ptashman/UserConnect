<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @post.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wants_item) %>:</strong></dt>
  <dd><%= @post.wants_item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wants_description) %>:</strong></dt>
  <dd><%= @post.wants_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wants_image) %>:</strong></dt>
  <dd><%= @post.wants_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:has_item) %>:</strong></dt>
  <dd><%= @post.has_item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:has_description) %>:</strong></dt>
  <dd><%= @post.has_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:has_image) %>:</strong></dt>
  <dd><%= @post.has_image %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
